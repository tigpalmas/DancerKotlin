<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:elevation="10dp"
    app:cardBackgroundColor="#F0EEE9">

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_dancer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:scaleType="centerCrop"
         />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:padding="5dp"
            android:layout_alignParentBottom="true"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/grandient_background"
            android:id="@+id/constraintLayout2">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:text="Tiago Palmas"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Intermediate"
                android:textColor="@color/colorWhite"
                android:textSize="10sp"
                app:layout_constraintLeft_toLeftOf="@+id/txt_name"
                app:layout_constraintTop_toBottomOf="@+id/txt_name" />

            <TextView
                android:id="@+id/txt_list_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Samba-ForrÃ³-Salsa"
                android:textColor="@color/colorWhite"
                android:textSize="8sp"
                app:layout_constraintLeft_toLeftOf="@+id/txt_level"
                app:layout_constraintTop_toBottomOf="@+id/txt_level" />

            <TextView
                android:id="@+id/txt_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="4dp"
                android:text="R$ 50/h"
                android:textColor="@color/colorWhite"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@+id/txt_name"
                app:layout_constraintLeft_toRightOf="@+id/txt_name"
                app:layout_constraintTop_toTopOf="@+id/txt_name" />
        </android.support.constraint.ConstraintLayout>




    </RelativeLayout>


</android.support.v7.widget.CardView>