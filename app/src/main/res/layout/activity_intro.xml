<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <com.flaviofaria.kenburnsview.KenBurnsView
        android:id="@+id/img_dancer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="222dp" />

    <RelativeLayout
        android:background="#000000"
        android:alpha="0.5"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </RelativeLayout>



    <Button


        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="96dp"
        android:layout_marginTop="109dp"
        android:id="@+id/btn_facebook"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Entrar com Facebook"
        android:textAllCaps="false"
        android:textColor="#ffff"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:visibility="visible"
        android:background="@color/facebookButton"
        />




    <TextView android:id="@+id/txt_entry"
        android:layout_width="fill_parent"
        android:textStyle="bold"
        android:visibility="visible"
        android:layout_height="wrap_content"
        android:text="Criar conta Depois"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:textSize="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="40dp" />

    <TextView
        android:id="@+id/txt_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        android:fontFamily="sans-serif-thin"
        android:text="Personal Dancer"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <TextView
        android:padding="20dp"
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="As melhores companhias, os melhores salÃµes"
        android:textColor="#FFFFFF"
        android:textSize="45sp"
        android:typeface="normal"
        android:layout_alignBottom="@+id/btn_facebook"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="41dp" />


</RelativeLayout>
